<?xml version="1.0" encoding="UTF-8"?>

<!-- config.xml reference: https://build.phonegap.com/docs/config-xml -->
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.navy.traineeguide"
    versionCode = "10" 
    version     = "1.0.0" >

    <name>Trainee Guide</name>

    <description>
        Prototype trainee guide
    </description>

	<source-file src="libs/iText-4.2.0.jar" target-dir="libs" />
    <gap:plugin name="cordova-plugin-statusbar" source="npm" version="2.2.0" />

    <access origin="*"/>
    
    <preference name="fullscreen" value="true" />
    

    <platform name="android" >
        <preference name="orientation" value="portrait" />
    </platform>
    
    <preference name="webviewbounce" value="false" />
    <icon src="icon.png" />
    <gap:splash src="splash.png" />

    <gap:config-file platform="ios" parent="UIStatusBarHidden">
        <true/>
    </gap:config-file>

    <gap:config-file platform="ios" parent="UIViewControllerBasedStatusBarAppearance">
        <false/>
    </gap:config-file>

    <platform name="ios" >
        <preference name="target-device" value="tablet" />
        <preference name="orientation" value="portrait" />
        

        <splash src="portrait.png" platform="ios" width="768" height="1024" />
        <splash src="portrait@2x.png" platform="ios" width="1536" height="2048" />

        
    </platform>



 
  

</widget>



